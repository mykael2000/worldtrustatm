# Environment Configuration
# Copy this file to .env and configure with your settings
# NEVER commit .env to version control

# Database Configuration
DB_HOST=localhost
DB_NAME=worldtrust_atm
DB_USER=root
DB_PASSWORD=

# Admin Configuration
ADMIN_EMAIL=admin@worldtrust.com

# Security Configuration
# Generate a random 32-character string for encryption key
# Example: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Application Settings
APP_ENV=development
APP_DEBUG=true
SESSION_TIMEOUT=1800

# Email Configuration (for future notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@worldtrust.com
SMTP_FROM_NAME=WorldTrust ATM

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=30
CSRF_TOKEN_EXPIRY=3600

# Rate Limiting
RATE_LIMIT_SUBMISSIONS=10
RATE_LIMIT_WINDOW=3600
